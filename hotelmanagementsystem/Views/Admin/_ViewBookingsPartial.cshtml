@model List<hotelmanagementsystem.Models.Reservation>

<div class="card">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0">View Bookings</h5>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Booking ID</th>
                <th>Customer Name</th>
                <th>Room Title</th>
                <th>Check-In</th>
                <th>Check-Out</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.Id</td>
                    <td>@reservation.Email</td>
                    <td>@reservation.Rooms</td>
                    <td>@reservation.ArrivalDate.ToShortDateString()</td>
                    <td>@reservation.DepartureDate.ToShortDateString()</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
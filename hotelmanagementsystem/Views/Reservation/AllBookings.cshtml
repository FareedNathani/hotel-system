@model List<hotelmanagementsystem.Models.Reservation>

@{
    ViewBag.Title = "All Bookings";
}

<h2 class="mb-4">All Bookings</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Arrival</th>
            <th>Departure</th>
            <th>Rooms</th>
            <th>Guests</th>
            <th>Email</th>
            <th>Note</th>
            <th>Booked On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.ArrivalDate.ToShortDateString()</td>
                <td>@reservation.DepartureDate.ToShortDateString()</td>
                <td>@reservation.Rooms.</td>
                <td>@reservation.Guests</td>
                <td>@reservation.Email</td>
                <td>@reservation.Note</td>
                <td>@reservation.CreatedAt.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

@model hotelmanagementsystem.Models.Reservation

<section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url('@Url.Content("~/Content/images/big_image_1.jpg")');">
    <div class="container">
        <div class="row align-items-center site-hero-inner justify-content-center">
            <div class="col-md-12 text-center">

                <div class="mb-5 element-animate">
                    <h1>Reservation</h1>
                    <p>Discover our world's #1 Luxury Room For VIP.</p>
                </div>

            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="mb-5">Reservation Form</h2>
                @using (Html.BeginForm("Create", "Reservation", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            @Html.LabelFor(m => m.ArrivalDate)
                            @Html.TextBoxFor(m => m.ArrivalDate, new { @class = "form-control", type = "date" })
                        </div>

                        <div class="col-sm-6 form-group">
                            @Html.LabelFor(m => m.DepartureDate)
                            @Html.TextBoxFor(m => m.DepartureDate, new { @class = "form-control", type = "date" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            @Html.Label("Rooms")
                            @Html.DropDownListFor(m => m.Rooms, new SelectList(Enumerable.Range(1, 5)), "Select", new { @class = "form-control" })
                        </div>

                        <div class="col-md-6 form-group">
                            @Html.Label("Guests")
                            @Html.DropDownListFor(m => m.Guests, new SelectList(Enumerable.Range(1, 5).Append(6)), "Select", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            @Html.LabelFor(m => m.Note)
                            @Html.TextAreaFor(m => m.Note, new { @class = "form-control", rows = 5 })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="submit" value="Reserve Now" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>

            <!-- Featured Room Section (static for now) -->
            <div class="col-md-1"></div>
            <div class="col-md-5">
                <h3 class="mb-5">Featured Room</h3>
                <div class="media d-block room mb-0">
                    <figure>
                        <img src="~/Content/images/img_1.jpg" class="img-fluid" />
                        <div class="overlap-text">
                            <span>
                                Featured Room
                                <span class="ion-ios-star"></span>
                                <span class="ion-ios-star"></span>
                                <span class="ion-ios-star"></span>
                            </span>
                        </div>
                    </figure>
                    <div class="media-body">
                        <h3 class="mt-0"><a href="#">Presidential Room</a></h3>
                        <ul class="room-specs">
                            <li><span class="ion-ios-people-outline"></span> 2 Guests</li>
                            <li><span class="ion-ios-crop"></span> 22 ft<sup>2</sup></li>
                        </ul>
                        <p>Elegant stay for luxury seekers. Book now and enjoy your time.</p>
                        <p><a href="#" class="btn btn-primary btn-sm">Book Now From $20</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


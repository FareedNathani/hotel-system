@model IEnumerable<hotelmanagementsystem.Models.Room>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

<section class="site-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url('@Url.Content("~/Content/images/big_image_1.jpg")'); background-size: cover;">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center" style="min-height: 90vh;">
            <div class="col-md-12">
                <div class="mb-5 element-animate">
                    <h1>Welcome To Our Luxury Rooms</h1>
                    <p>Discover our world's #1 Luxury Room For VIP.</p>
                    <p><a href="@Url.Action("Index", "Reservation")" class="btn btn-primary">Book Now</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-md-4 text-center">
                <div class="heading-wrap element-animate">
                    <h4 class="sub-heading">Stay with our luxury rooms</h4>
                    <h2 class="heading">Stay and Enjoy</h2>
                    <p class="mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit...</p>
                    <p><a href="@Url.Action("About", "Home")" class="btn btn-primary btn-sm">More About Us</a></p>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-7">
                <img src="@Url.Content("~/Content/images/f_img_1.png")" alt="Luxury" class="img-fluid" />
            </div>
        </div>
    </div>
</section>

<section class="site-section bg-light">
    <div class="container py-5">
        <div class="row mb-5">
            <div class="col-md-12 heading-wrap text-center">
                <h4 class="sub-heading">Our Luxury Rooms</h4>
                <h2 class="heading">Featured Rooms</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var room in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="media d-block room">
                        <figure>
                            <img src="@Url.Content(room.ImageUrl ?? "~/Content/images/img_1.jpg")" alt="Room Image" class="img-fluid" />
                            <div class="overlap-text">
                                <span>
                                    Featured Room
                                    <span class="icon ion-ios-star"></span>
                                    <span class="icon ion-ios-star"></span>
                                    <span class="icon ion-ios-star"></span>
                                </span>
                            </div>
                        </figure>
                        <div class="media-body">
                            <h3 class="mt-0"><a href="#">@room.Title</a></h3>
                            <ul class="room-specs">
                                <li><span class="icon ion-ios-people-outline"></span> @room.Type Guests</li>
                                <li><span class="icon ion-ios-crop"></span> @room.Type ft<sup>2</sup></li>
                            </ul>
                            <p>@room.Description</p>
                            <p><a href="@Url.Action("BookNow", "Reservation", new { roomId = room.Id })" class="btn btn-primary btn-sm">Book Now From $@room.Price</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="section-cover" data-stellar-background-ratio="0.5" style="background-image: url('@Url.Content("~/Content/images/img_5.jpg")'); background-size: cover;">
    <div class="container py-5">
        <div class="row justify-content-center align-items-center intro text-center">
            <div class="col-md-9 element-animate">
                <h2>Relax and Enjoy your Holiday</h2>
                <p class="lead mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit...</p>
                <div class="btn-play-wrap">
                    <a href="https://vimeo.com/channels/staffpicks/93951774" class="btn-play popup-vimeo">
                        <span class="icon ion-ios-play"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section bg-light">
    <div class="container py-5">
        <div class="row mb-5">
            <div class="col-md-12 heading-wrap text-center">
                <h4 class="sub-heading">Our Blog</h4>
                <h2 class="heading">Our Recent Blog</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="post-entry">
                    <img src="@Url.Content("~/Content/images/img_3.jpg")" alt="Blog 1" class="img-fluid" />
                    <div class="body-text">
                        <div class="category">Rooms</div>
                        <h3 class="mb-3"><a href="@Url.Action("Index", "Blog")">New Rooms</a></h3>
                        <p class="mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit...</p>
                        <p><a href="@Url.Action("Details", "Blog")" class="btn btn-primary btn-outline-primary btn-sm">Read More</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="post-entry">
                    <img src="@Url.Content("~/Content/images/img_6.jpg")" alt="Blog 2" class="img-fluid" />
                    <div class="body-text">
                        <div class="category">News</div>
                        <h3 class="mb-3"><a href="@Url.Action("Index", "Blog")">New Staff Added</a></h3>
                        <p class="mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit...</p>
                        <p><a href="@Url.Action("Details", "Blog")" class="btn btn-primary btn-outline-primary btn-sm">Read More</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="post-entry">
                    <img src="@Url.Content("~/Content/images/img_5.jpg")" alt="Blog 3" class="img-fluid" />
                    <div class="body-text">
                        <div class="category">New Rooms</div>
                        <h3 class="mb-3"><a href="@Url.Action("Index", "Blog")">Big Rooms for All</a></h3>
                        <p class="mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing elit...</p>
                        <p><a href="@Url.Action("Details", "Blog")" class="btn btn-primary btn-outline-primary btn-sm">Read More</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

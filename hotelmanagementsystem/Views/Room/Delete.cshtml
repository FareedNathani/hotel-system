@model hotelmanagementsystem.Models.Room

@{
    ViewBag.Title = "Delete Room";
}

<h2>Are you sure you want to delete this room?</h2>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Room Number:</strong> @Model.RoomNumber</p>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Room", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}
@model IEnumerable<hotelmanagementsystem.Models.Room>

<section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url(/Content/images/big_image_1.jpg);">
    <div class="container">
        <div class="row align-items-center site-hero-inner justify-content-center">
            <div class="col-md-12 text-center">
                <div class="mb-5 element-animate">
                    <h1>Our Rooms</h1>
                    <p>Discover our world's #1 Luxury Room For VIP.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container">
        <div class="row">
            @foreach (var room in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="media d-block room mb-0">
                        <figure>
                            <img src="@Url.Content("~/Content/images/img_1.jpg")" alt="Room 1" class="img-fluid"/>
                            <div class="overlap-text">
                                <span>
                                    Hotel Room
                                    <span class="icon ion-ios-star"></span>
                                    <span class="icon ion-ios-star"></span>
                                    <span class="icon ion-ios-star"></span>
                                </span>
                            </div>
                        </figure>
                        <div class="media-body">
                            <h3 class="mt-0"><a href="#">@room.Title</a></h3>
                            <ul class="room-specs">
                                <li><span class="ion-ios-people-outline"></span> @room.Type Guests</li>
                                <li><span class="ion-ios-crop"></span>@room.RoomNumber ft<sup>2</sup></li>
                            </ul>
                            <p>@room.Description</p>
                            <p><a href="@Url.Action("Booknow", "Reservation", new { roomid = room.Id })" class="btn btn-primary btn-sm">Book Now From $@room.Price</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="section-cover" data-stellar-background-ratio="0.5" style="background-image: url(/Content/images/img_5.jpg);">
    <div class="container">
        <div class="row justify-content-center align-items-center intro">
            <div class="col-md-9 text-center element-animate">
                <h2>Relax and Enjoy your Holiday</h2>
                <p class="lead mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                <div class="btn-play-wrap">
                    <a href="https://vimeo.com/channels/staffpicks/93951774" class="btn-play popup-vimeo">
                        <span class="ion-ios-play"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
